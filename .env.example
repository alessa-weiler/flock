# =============================================================================
# FLOCK - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED: Core Application Secrets
# -----------------------------------------------------------------------------

# Flask secret key for session management (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here-min-32-chars

# OpenAI API key for AI features (get from: https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key-here

# -----------------------------------------------------------------------------
# REQUIRED: Data Encryption
# -----------------------------------------------------------------------------

# Master encryption key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_MASTER_KEY=your-fernet-key-here

# Alternative: Password and salt for key derivation (if not using ENCRYPTION_MASTER_KEY)
ENCRYPTION_PASSWORD=your-strong-password-here-min-16-chars
ENCRYPTION_SALT=your-random-salt-here-min-16-chars

# Hash salt for matching algorithm (generate with: python -c "import secrets; print(secrets.token_hex(32))")
HASH_SALT=your-hash-salt-here-min-32-chars

# -----------------------------------------------------------------------------
# REQUIRED: Database
# -----------------------------------------------------------------------------

# PostgreSQL database URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/flock_db

# -----------------------------------------------------------------------------
# REQUIRED: Payment Processing (Stripe)
# -----------------------------------------------------------------------------

# Stripe API keys (get from: https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here

# Stripe webhook secret (get from: https://dashboard.stripe.com/webhooks)
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Stripe price ID for premium subscription
STRIPE_PRICE_ID=price_your-stripe-price-id-here

# -----------------------------------------------------------------------------
# REQUIRED: Email Configuration
# -----------------------------------------------------------------------------

# SMTP server settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password-here
EMAIL_FROM=your-email@gmail.com

# -----------------------------------------------------------------------------
# REQUIRED: Cloud Storage (DigitalOcean Spaces / AWS S3)
# -----------------------------------------------------------------------------

# DigitalOcean Spaces credentials (or AWS S3 compatible)
DO_SPACES_KEY=your-spaces-access-key-here
DO_SPACES_SECRET=your-spaces-secret-key-here
DO_SPACES_BUCKET=your-bucket-name
DO_SPACES_REGION=nyc3
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com

# -----------------------------------------------------------------------------
# REQUIRED: Vector Database (Pinecone)
# -----------------------------------------------------------------------------

# Pinecone API configuration (get from: https://app.pinecone.io)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=your-pinecone-index-name

# -----------------------------------------------------------------------------
# REQUIRED: Background Job Processing (Celery + Redis)
# -----------------------------------------------------------------------------

# Redis URL for Celery broker and result backend
REDIS_URL=redis://localhost:6379/0

# Alternative: Separate URLs for broker and backend
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# OPTIONAL: Application Configuration
# -----------------------------------------------------------------------------

# Flask environment: development, production, or testing
FLASK_ENV=development

# Application URL (for email links and webhooks)
APP_URL=http://localhost:8080

# Port for local development
PORT=8080

# Enable debug mode (NEVER use in production)
DEBUG=False

# -----------------------------------------------------------------------------
# OPTIONAL: Feature Flags
# -----------------------------------------------------------------------------

# Enable/disable specific features
ENABLE_DOCUMENT_PROCESSING=true
ENABLE_AI_CHAT=true

# -----------------------------------------------------------------------------
# OPTIONAL: Rate Limiting
# -----------------------------------------------------------------------------

# Embedding service rate limits
EMBEDDING_RATE_LIMIT_PER_MINUTE=60
EMBEDDING_RATE_LIMIT_PER_HOUR=3000

# -----------------------------------------------------------------------------
# OPTIONAL: Monitoring and Logging
# -----------------------------------------------------------------------------

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Sentry DSN for error tracking (get from: https://sentry.io)
SENTRY_DSN=your-sentry-dsn-here

# -----------------------------------------------------------------------------
# SECURITY NOTES
# -----------------------------------------------------------------------------
# 1. NEVER commit the .env file to version control
# 2. Use strong, randomly generated values for all secrets
# 3. Rotate secrets regularly (every 90 days recommended)
# 4. Use different values for development, staging, and production
# 5. Store production secrets in a secure vault (e.g., AWS Secrets Manager, HashiCorp Vault)
# 6. Limit access to environment variables on a need-to-know basis
# 7. Monitor for leaked secrets using tools like GitGuardian or TruffleHog
